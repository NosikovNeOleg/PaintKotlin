<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: edf2e9;"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.paintkotlin.controllers.PaintController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="instrumentsGridPane">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="160.0" prefWidth="160.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="160.0" prefWidth="160.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="160.0" prefWidth="160.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="160.0" prefWidth="160.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" maxWidth="90.0" prefWidth="80.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" maxWidth="90.0" prefWidth="80.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" maxWidth="90.0" prefWidth="80.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints/>
        </rowConstraints>
        <children>
            <ComboBox fx:id="instrumentsBoxPaint" accessibleText="Инструмент" maxWidth="160.0" prefWidth="160.0"
                      value="Выбрать" GridPane.rowIndex="2"/>
            <ComboBox fx:id="shapesBoxPaint" accessibleText="Фигура" maxWidth="160.0" prefWidth="160.0"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <ColorPicker fx:id="fillColorBoxPaint" accessibleText="Цвет заливки" maxWidth="160.0" prefWidth="160.0"
                         GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <ColorPicker fx:id="strokeColorBoxPaint" accessibleText="Цвет обводки" maxWidth="160.0" prefWidth="160.0"
                         GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <Button fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#onSaveButtonClicked" maxWidth="80.0"
                    prefWidth="80.0" text="Сохранить" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
            <Button fx:id="loadButton" mnemonicParsing="false" onMouseClicked="#onLoadButtonClicked" maxWidth="80.0"
                    prefWidth="80.0" text="Загрузить" GridPane.columnIndex="5" GridPane.rowIndex="2"/>
            <Button fx:id="changeFieldButton" mnemonicParsing="false" onMouseClicked="#onChangeFieldButtonClicked"
                    maxWidth="80.0" prefWidth="80.0" text="Морфинг" GridPane.columnIndex="6" GridPane.rowIndex="2"/>
        </children>
    </GridPane>
    <Pane fx:id="paintFieldPaint" maxHeight="650.0" maxWidth="1240.0" onMouseDragged="#paintMouseDragged"
          onMousePressed="#paintMousePressed" onMouseReleased="#paintMouseReleased" prefHeight="650.0"
          prefWidth="1240.0" style="-fx-background-color: #FFFFFF;">
    </Pane>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
</VBox>
