<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: edf2e9;"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.paintkotlin.controllers.PaintController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox fx:id="labelsBoxPaint" prefHeight="100.0" prefWidth="1240.0"/>
    <HBox fx:id="controlsBoxPaint" prefHeight="23.0" prefWidth="1237.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <ComboBox fx:id="instrumentsBoxPaint" accessibleText="Инструмент" prefWidth="150.0" value="Выбрать">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </ComboBox>
        <ComboBox fx:id="shapesBoxPaint" accessibleText="Фигура" prefWidth="150.0">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </ComboBox>
        <ColorPicker fx:id="fillColorBoxPaint" accessibleText="Цвет заливки">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </ColorPicker>
        <ColorPicker fx:id="strokeColorBoxPaint" accessibleText="Цвет обводки">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </ColorPicker>
        <Button fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#onSaveButtonClicked" text="Сохранить">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="loadButton" mnemonicParsing="false" onMouseClicked="#onLoadButtonClicked" text="Загрузить">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="changeFieldButton" mnemonicParsing="false" onMouseClicked="#onChangeFieldButtonClicked"
                text="Морфинг">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <Pane fx:id="paintFieldPaint" maxHeight="650.0" maxWidth="1240.0" onMouseDragged="#paintMouseDragged"
          onMousePressed="#paintMousePressed" onMouseReleased="#paintMouseReleased" prefHeight="650.0"
          prefWidth="1240.0" style="-fx-background-color: #FFFFFF;">
    </Pane>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
</VBox>
